{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    // "plugin:react-hooks/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-extra-semi": "off",
    "no-mixed-spaces-and-tabs": "off",
    "no-unexpected-multiline": "off",
    "no-unused-vars": "warn"
  },
  "globals": {
    "process": "readonly"
  }
}
